CREATE EXTERNAL TABLE decimal_simple (
c1 DECIMAL(10,6) NOT NULL,
c2 DOUBLE NOT NULL,
c3 BIGINT NOT NULL,
c4 BOOLEAN NOT NULL,
c5 DECIMAL(12,7) NOT NULL
)
STORED AS CSV
WITH HEADER ROW
LOCATION 'tests/data/decimal_data.csv';

query T
select arrow_typeof(c1+1) from decimal_simple limit 1;
